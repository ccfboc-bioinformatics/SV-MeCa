myConda = '/projects/ag-fbz/rnkouame/software/miniconda3/envs'
params {

    // General standard
    
    results = "$baseDir/results"
    

    // General Custom
    bed = "$baseDir/data/hg19_gap.bed"
    input = "$baseDir/data/input.bam"
    reference = "$baseDir/data/hs37d5.fa"
    skip_manta = true
    // Breakdancer

    // Delly

    // Lumpy

    // Manta

    // Pindel
    pd_insert = 350
    pd_multi = true

    // Tardis
    sonic_file = "$baseDir/data/human_g1k_v37.sonic"
}



process{
    executor = 'slurm'
	queue = 'devel-rh7,smp-rh7,fbz,fbz-exclusive'
    cache = 'lenient'
    //clusterOptions = '--exclusive'
    queueSize = 6
    
    
    withName: REFERENCE_INDEX {
        conda = "${myConda}/samtools"
        cpus = 1
        memory = {4.GB * task.attempt}
        errorStrategy = 'retry'
        maxRetries = 1
        time = '1h'
    }
    withName: INCLUDE_REGIONS {
        conda = "${myConda}/bedtools"
        cpus = 1
        memory = {4.GB * task.attempt}
        errorStrategy = 'retry'
        maxRetries = 1
        time = '1h'
    }
    withName: BAM_INDEX {
        conda = "${myConda}/samtools"
        cpus = 8
        memory = {8.GB * task.attempt}
        errorStrategy = 'retry'
        maxRetries = 1
        time = '1h'
    }
    withName: BREAKDANCER {
        conda = "${myConda}/breakdancer"
        cpus = 4
        memory = {8.GB * task.attempt}
        errorStrategy = 'retry'
        maxRetries = 1
        time = '24h'
    }
    withName: MANTA {
        conda = "${myConda}/manta"
        cpus = {8 * task.attempt}
        memory = {8.GB * task.attempt}
        errorStrategy = 'ignore'
        maxRetries = 1
        time = '24h'
    }
    withName: LUMPY {
        conda = "${myConda}/smoove"
        cpus = 4
        memory = {8.GB * task.attempt}
        errorStrategy = 'retry'
        maxRetries = 1
        time = '24h'
    }
    withName: DELLY {
        conda = "${myConda}/delly"
        cpus = 4
        memory = {8.GB * task.attempt}
        errorStrategy = 'retry'
        maxRetries = 1
        time = '24h'
    }
    withName: PINDEL_SINGLE {
        conda = "${myConda}/pindel"
        cpus = 8
        memory = {16.GB * task.attempt}
        errorStrategy = 'retry'
        maxRetries = 1
        time = '24h'
    }
    withName: MERGE_PINDEL_SINGLE {
        conda = "${myConda}/samtools"
        cpus = 8
        memory = {16.GB * task.attempt}
        errorStrategy = 'retry'
        maxRetries = 1
        time = '1h'
    }
    withName: TARDIS_PREP {
        conda = "${myConda}/smoove"
        cpus = 4
        memory = {8.GB * task.attempt}
        errorStrategy = 'retry'
        maxRetries = 1
        time = '24h'
    }
    withName: TARDIS {
        container = "$baseDir/bin/tardis_latest.sif"
        containerOptions = "--bind $baseDir/../.."
        cpus = 4
        memory = {8.GB * task.attempt}
        errorStrategy = 'retry'
        maxRetries = 1
        time = '24h'
    }
    withName: SURVIVOR_MERGE {
        conda = "${myConda}/smoove"
        cpus = 4
        memory = {8.GB * task.attempt}
        errorStrategy = 'retry'
        maxRetries = 1
        time = '24h'
    }
}

singularity {
    enabled = true 
    autMounts = true
    engineOptions = "-d"
}
trace {
    enabled = true
    file = 'trace.tsv'
    fields = 'task_id, hash, native_id, name, status, attempt, exit, realtime, cpus, %cpu, memory, %mem, rss, vmem, peak_rss, peak_vmem'
}
